datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

// ========== AUTHENTIFICATION ==========

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String
  hashedPassword String
  role           UserRole  @default(VIEWER)
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  devices   Device[]
  alerts    Alert[]
  trips     Trip[]

  clientOrders     Order[]    @relation("ClientOrders")
  driverDeliveries Delivery[] @relation("DriverDeliveries")

  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  VIEWER
  CLIENT
  DRIVER
}

// ========== APPAREILS DE TRACKING ==========

model Device {
  id           String       @id @default(cuid())
  name         String
  serialNumber String       @unique
  type         DeviceType
  status       DeviceStatus @default(INACTIVE)
  lastSeen     DateTime?
  batteryLevel Int?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  vehicle   Vehicle?
  person    Person?
  asset     Asset?

  positions Position[]
  trips     Trip[]
  alerts    Alert[]

  @@index([userId])
  @@index([type, status])
  @@map("devices")
}

enum DeviceType {
  VEHICLE
  PERSON
  ASSET
}

enum DeviceStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
  LOST
}

// ========== ENTITES TRACKEES ==========

model Vehicle {
  id           String   @id @default(cuid())
  brand        String
  model        String
  year         Int?
  licensePlate String   @unique
  color        String?
  fuelType     FuelType @default(GASOLINE)
  odometerKm   Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  deviceId String @unique
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@map("vehicles")
}

enum FuelType {
  GASOLINE
  DIESEL
  ELECTRIC
  HYBRID
}

model Person {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  phone     String?
  email     String?
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deviceId String @unique
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@map("persons")
}

model Asset {
  id          String   @id @default(cuid())
  name        String
  category    String
  description String?
  value       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deviceId String @unique
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@map("assets")
}

// ========== POSITIONS GPS ==========

model Position {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  altitude  Float?
  speed     Float?
  heading   Float?
  accuracy  Float?
  timestamp DateTime @default(now())

  deviceId String
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  tripId String?
  trip   Trip?  @relation(fields: [tripId], references: [id], onDelete: SetNull)

  @@index([deviceId, timestamp])
  @@index([timestamp])
  @@map("positions")
}

// ========== TRAJETS ==========

model Trip {
  id              String     @id @default(cuid())
  name            String?
  status          TripStatus @default(IN_PROGRESS)
  startTime       DateTime   @default(now())
  endTime         DateTime?
  distanceKm      Float      @default(0)
  durationMinutes Int        @default(0)
  maxSpeedKmh     Float      @default(0)
  avgSpeedKmh     Float      @default(0)
  startAddress    String?
  endAddress      String?
  createdAt       DateTime   @default(now())

  deviceId String
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  positions Position[]

  @@index([deviceId, startTime])
  @@index([userId])
  @@map("trips")
}

enum TripStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// ========== GEOFENCING ==========

model Geofence {
  id           String       @id @default(cuid())
  name         String
  description  String?
  type         GeofenceType
  centerLat    Float?
  centerLng    Float?
  radiusMeters Float?
  coordinates  Json?
  color        String       @default("#3B82F6")
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  alerts Alert[]

  @@map("geofences")
}

enum GeofenceType {
  CIRCLE
  POLYGON
}

// ========== ALERTES ==========

model Alert {
  id        String        @id @default(cuid())
  type      AlertType
  severity  AlertSeverity @default(INFO)
  title     String
  message   String
  isRead    Boolean       @default(false)
  data      Json?
  createdAt DateTime      @default(now())

  deviceId   String?
  device     Device?   @relation(fields: [deviceId], references: [id], onDelete: SetNull)

  geofenceId String?
  geofence   Geofence? @relation(fields: [geofenceId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("alerts")
}

enum AlertType {
  GEOFENCE_ENTER
  GEOFENCE_EXIT
  SPEED_LIMIT
  LOW_BATTERY
  DEVICE_OFFLINE
  SOS
  MAINTENANCE
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

// ========== LIVRAISON ==========

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  category    ProductCategory
  shopName    String
  image       String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItem[]

  @@map("products")
}

enum ProductCategory {
  RESTAURANT
  GROCERY
  PHARMACY
  ELECTRONICS
  OTHER
}

model Order {
  id              String      @id @default(cuid())
  status          OrderStatus @default(PENDING)
  totalAmount     Float
  deliveryAddress String
  deliveryLat     Float
  deliveryLng     Float
  note            String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  clientId String
  client   User   @relation("ClientOrders", fields: [clientId], references: [id], onDelete: Cascade)

  items    OrderItem[]
  delivery Delivery?

  @@index([clientId, status])
  @@index([status])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  ACCEPTED
  PREPARING
  PICKED_UP
  DELIVERING
  DELIVERED
  CANCELLED
}

model OrderItem {
  id       String @id @default(cuid())
  quantity Int
  price    Float

  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Delivery {
  id               String         @id @default(cuid())
  status           DeliveryStatus @default(ASSIGNED)
  startTime        DateTime       @default(now())
  endTime          DateTime?
  estimatedMinutes Int?
  currentLat       Float?
  currentLng       Float?

  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  driverId String
  driver   User   @relation("DriverDeliveries", fields: [driverId], references: [id])

  positions DeliveryPosition[]

  @@index([driverId, status])
  @@map("deliveries")
}

enum DeliveryStatus {
  ASSIGNED
  PICKING_UP
  DELIVERING
  DELIVERED
  CANCELLED
}

model DeliveryPosition {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  speed     Float?
  timestamp DateTime @default(now())

  deliveryId String
  delivery   Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)

  @@index([deliveryId, timestamp])
  @@map("delivery_positions")
}
